<h1>New Figure!</h2>
<form action="/figures" method="POST">
<label>Name</label>
<input type="text" name="figure[name]" id="figure_name">
<h3>Title(s)</h3>
<% Title.all.each {|t| %>
  <label><%= t.name %></label>
  <input type="checkbox" name="figure[title_ids][]" value="<%= t.id %>" id="title_<%= t.id %>">
<% } %>
<label>New Title</label>
<input type="text" name="title[name]" id="new_title">
<h3>Landmark(s)</h3>
<% Landmark.all.each {|l| %>
  <label><%= l.name %></label>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%= l.id %>" id="landmark_<%= l.id %>"><br>
<% } %>
<label>New Landmark</label>
<input type="text" name="landmark[name]" id="new_landmark">
<br>
<input type="submit" value="Create New Figure"><br>
</form>
